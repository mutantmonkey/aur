# Maintainer: mutantmonkey <aur@mutantmonkey.in>
pkgname=riot-web
pkgver=0.11.4
pkgrel=1
pkgdesc="Riot (formerly known as Vector) is a Matrix web client built using the Matrix React SDK."
arch=('i686' 'x86_64')
url="https://github.com/vector-im/riot-web"
license=('Apache')
optdepends=('electron: Run the application as an Electron app')
source=("https://github.com/vector-im/riot-web/releases/download/v${pkgver}/riot-v${pkgver}.tar.gz"{,.asc})
sha256sums=('792b8eb398ec08c6f32f64b27f92d31d658c6d2338c1e43c84136f25f64d1cb2'
            'SKIP')
validpgpkeys=('6FEB6F83D48B93547E7DFEDEE019645248E8F4A1')

package() {
  cd "$srcdir/riot-v${pkgver}"
  install -d -m755 "${pkgdir}/usr/share/riot"
  cp -r * "${pkgdir}/usr/share/riot/"
}

